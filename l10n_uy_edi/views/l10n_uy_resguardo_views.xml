<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="action_resguardos_uy" model="ir.actions.act_window">
        <field name="name">Resguardos (UY)</field>
        <field name="res_model">l10n.uy.resguardo</field>
        <field name="view_mode">form,tree</field>
    </record>

    <record id="l10n_uy_resguardo_view_form" model="ir.ui.view">
        <field name="name">l10n.uy.resguardo.view.form</field>
        <field name="model">l10n.uy.resguardo</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="l10n_latam_document_type_id"/>
                        <field name="l10n_latam_document_number"/>
                        <field name="date"/>
                        <field name="aml_ids"/>
                    </group>
                    <notebook>
                        <page string="Detail">
                            <group string="UCFE">
                                <field name="l10n_uy_ucfe_state"/>
                                <field name="l10n_uy_ucfe_msg"/>
                                <!-- <field name="l10n_uy_ucfe_notif"/> -->
                                <!-- <field name="l10n_uy_cfe_partner_status"/> -->
                                <field name="l10n_uy_cfe_uuid"/>
                                <button name="action_l10n_uy_get_uruware_cfe" type="object" string="Get Uruware Invoice" class="oe_inline oe_link"/>
                                <field name="l10n_uy_cfe_file"/>
                            </group>
                            <group string="DGI">
                                <field name="l10n_latam_document_number"/>
                                <label for="l10n_uy_cfe_dgi_state"/>
                                <div>
                                    <field name="l10n_uy_cfe_dgi_state"/>
                                </div>
                                <field name="l10n_uy_dgi_barcode"/>
                            </group>
                        </page>
                        <page string="XML CFE">
                            <button name="action_l10n_uy_validate_cfe" type="object" string="Validate CFE XML" class="oe_inline oe_link"/>
                            <field name="l10n_uy_cfe_xml" nolabel="1" widget="ace"/>
                        </page>
                        <page string="XML Request">
                            <field name="l10n_uy_dgi_xml_request" nolabel="1" widget="ace"/>
                        </page>
                        <page string="XML Response">
                            <field name="l10n_uy_dgi_xml_response" nolabel="1" widget="ace"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <menuitem id="menu_uy_resguardos" name="Resguardos (UY)" parent="account.menu_finance_configuration" action="action_resguardos_uy" sequence="25"/>

</odoo>
