<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- TODO in AR this menu is in l10n_ar module not in l10n_ar_reports, unify criteria -->
    <menuitem id="account_reports_uy_statements_menu" name="Uruguayan Statements" parent="account.menu_finance_reports" sequence="3" groups="account.group_account_user"/>

    <record id="action_l10n_uy_sales_vat_book" model="ir.actions.client">
        <field name="name">Sales VAT book</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'l10n_uy_account.vat.book', 'journal_type': 'sale'}"/>
    </record>

    <menuitem
        id="menu_l10n_uy_sales_vat_book"
        action="action_l10n_uy_sales_vat_book"
        parent="account_reports_uy_statements_menu"/>

    <record id="action_l10n_uy_purchases_vat_book" model="ir.actions.client">
        <field name="name">Purchases VAT book</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'l10n_uy_account.vat.book', 'journal_type': 'purchase'}"/>
    </record>

    <menuitem
        id="menu_l10n_uy_purchases_vat_book"
        action="action_l10n_uy_purchases_vat_book"
        parent="account_reports_uy_statements_menu"/>

</odoo>
