<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_edi_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="name">stock.picking.edi.form</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">

            <form>
                <field name="country_code" invisible="1"/>
                <field name="l10n_latam_available_document_type_ids" invisible="1"/>
                <field name="l10n_uy_is_cfe" invisible="1"/>
            </form>

            <xpath expr="//field[@name='origin']" position="after">
                <field name="l10n_latam_document_type_id" domain="[('id', 'in', l10n_latam_available_document_type_ids)]" options="{'no_open': True, 'no_create': True}"/>
                <field name="l10n_latam_document_number" invisible="not l10n_latam_document_type_id or not l10n_latam_document_number or not l10n_uy_is_cfe" readonly="state != 'draft'" required="not l10n_uy_is_cfe and l10n_latam_document_type_id"/>
                <field name="l10n_uy_edi_cfe_state" invisible="not l10n_uy_is_cfe"/>
                <field name="l10n_uy_edi_document_id" invisible="not l10n_uy_edi_document_id"/>

                <button name="l10n_uy_edi_action_get_dgi_state" type="object" string="(UY) Consult DGI State" class="oe_link" colspan="2" invisible="l10n_uy_edi_cfe_state != 'received'" icon="fa-refresh"/>
                <button name="uy_ux_action_uy_get_pdf" type="object" string="(UY) Print Legal PDF" class="oe_link" colspan="2" invisible="l10n_uy_edi_cfe_state != 'received'" icon="fa-print"/>

            </xpath>

            <xpath expr="//header//button[@name='action_cancel']" position="after">
                <button name="l10n_uy_edi_stock_post_dgi" string="(UY) Enviar a DGI" type="object" invisible="state != 'done' or not l10n_uy_is_cfe or l10n_uy_edi_cfe_state not in ['accepted', 'rejected', 'received'] or picking_type_code != 'outgoing' or l10n_uy_edi_cfe_state in ['received', 'accepted', 'rejected'] or country_code != 'UY'"/>
            </xpath>

            <notebook position="inside">
                <page name="uy_dgi" string="DGI" invisible="not l10n_uy_is_cfe">
                    <field name="l10n_uy_transfer_of_goods" required="l10n_latam_document_type_id"/>
                    <field name="l10n_uy_edi_place_of_delivery" readonly="state != 'draft'"/>
                    <!-- <field name="l10n_uy_additional_info"/> -->
                    <button name="uy_ux_action_get_uruware_cfe" type="object" string="Obtener Remito creado en Uruware" class="oe_link" colspan="2"/>
                    <button name="uy_ux_action_validate_cfe" type="object" string="Validate CFE XML" class="oe_link" colspan="2"/>
                    <field name="l10n_uy_cfe_xml" nolabel="1" widget="ace"/>
                </page>
            </notebook>

        </field>
    </record>

    <record id="view_picking_edi_tree" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="name">stock.picking.edi.tree</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="json_popover" position="after">
                <field name="l10n_uy_edi_error"/>
            </field>
        </field>
    </record>

</odoo>
