<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_uy_edi_addenda_view_tree" model="ir.ui.view">
        <field name="name">l10n_uy_edi.addenda.view.tree</field>
        <field name="model">l10n_uy_edi.addenda</field>
        <field name="inherit_id" ref="l10n_uy_edi.l10n_uy_edi_addenda_view_tree"/>
        <field name="arch" type="xml">
            <field name="content" position="after">
                <field name="apply_on"/>
                <field name="condition"/>
                <field name="company_id"/>
                <field name="active" widget="boolean_toggle"/>
            </field>

            <field name="name" position="before">
                <field name="sequence" widget="handle"/>
            </field>
        </field>
    </record>

    <record id="l10n_uy_edi_addenda_view_form_only_item" model="ir.ui.view">
        <field name="name">l10n_uy_edi.addenda.view.form</field>
        <field name="model">l10n_uy_edi.addenda</field>
        <field name="inherit_id" ref="l10n_uy_edi.l10n_uy_edi_addenda_view_form_only_item"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="apply_on" readonly="1"/>
            </field>
        </field>
    </record>

    <record id="l10n_uy_edi_addenda_view_form" model="ir.ui.view">
        <field name="name">l10n_uy_edi.addenda.view.form</field>
        <field name="model">l10n_uy_edi.addenda</field>
        <field name="inherit_id" ref="l10n_uy_edi.l10n_uy_edi_addenda_view_form"/>
        <field name="arch" type="xml">
            <field name="content" position="after">
                <field name="apply_on"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.act_window" id="l10n_uy_edi.action_l10n_uy_edi_addenda">
        <field name="context">{"active_test": False}</field>
    </record>


</odoo>
